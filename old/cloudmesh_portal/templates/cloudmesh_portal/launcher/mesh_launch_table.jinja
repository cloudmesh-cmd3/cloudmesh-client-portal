{% extends 'cloudmesh_portal/layout/index.jinja' %}



{% block content %}


<script type="text/javascript" charset="utf-8">
    $(document).ready(function() {
        $('#dictTable').DataTable({
           aLengthMenu: [
                [10, 20, 50, 100, 200, -1],
                [10, 20, 50, 100, 200, "All"]
            ],
            iDisplayLength: 10,
            responsive: true,
        });
    } );
</script>

<table  id="dictTable" class="table table-striped table-bordered">
    <thead>
        <td>Icon</td>
        <td>Name</td>
        <td>Description</td>
    </thead>
    <tbody>

    {% for name in recipies %}
    <tr>
      {% set recipie = recipies[name] %}

         <td><img src="{{ static(recipie['image']) }}" style="height:12px;"> </td>
         <td>{{name | capitalize}}</td>
         <td>{{ recipie['description'] }}</td>
    </tr>
    {% endfor %}
    </tbody>

</table>

{% endblock %}
